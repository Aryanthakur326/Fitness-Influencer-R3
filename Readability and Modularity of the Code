//User Class: Encapsulate user data and behavior.
class User {
    private final String username;
    private final String email;
    private final List<String> workouts;
    public User(String username, String email) {
        this.username = username;
        this.email = email;
        this.workouts = new ArrayList<>();
    }
    public String getUsername() {
        return username;
    }
    public void logWorkout(String workoutType, int duration) {
        workouts.add(workoutType + " - " + duration + " minutes");
    }
    public void viewWorkouts() {
        if (workouts.isEmpty()) {
            System.out.println("No workouts logged yet.");
            return;
        }
        System.out.println("Workouts:");
        for (String workout : workouts) {
            System.out.println("- " + workout);
        }
    }
}

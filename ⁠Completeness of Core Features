public void viewWorkoutSummary() {
    int totalDuration = workouts.stream()
        .mapToInt(workout -> Integer.parseInt(workout.split(" - ")[1].replace(" minutes", "")))
        .sum();
    System.out.println("Total Workout Time: " + totalDuration + " minutes");
}
